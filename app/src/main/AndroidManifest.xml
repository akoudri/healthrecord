<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akoudri.healthrecord.app" >

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name="com.akoudri.healthrecord.app.HealthRecordApp"
        android:allowBackup="true"
        android:icon="@drawable/health_record_app"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddPersonActivity"
            android:label="@string/add" >
            <intent-filter>
                <action android:name="com.akoudri.healthrecord.app.AddPerson" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UpdatePersonActivity"
            android:label="@string/update" >
            <intent-filter>
                <action android:name="com.akoudri.healthrecord.app.UpdatePerson" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditPersonActivity"
            android:label="@string/edit" >
            <intent-filter>
                <action android:name="com.akoudri.healthrecord.app.EditPerson" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyTherapistsActivity"
            android:label="@string/my_therapists" >
            <intent-filter>
                <action android:name="com.akoudri.healthrecord.app.MyTherapists" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddTherapistActivity"
            android:label="@string/add_therapist" >
            <intent-filter>
                <action android:name="com.akoudri.healthrecord.app.AddTherapist" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UpdateTherapistActivity"
            android:label="@string/update_therapist" >
            <intent-filter>
                <action android:name="com.akoudri.healthrecord.app.UpdateTherapist" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
