<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/app_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditAppointmentActivity">

    <LinearLayout
        android:id="@+id/appt_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <LinearLayout
        android:id="@+id/appt_hour_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="@string/with"
            android:textColor="@color/regular_text_color"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:minEms="3"
            android:maxEms="3"
            android:layout_gravity="center_vertical"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/thchoice_update"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/notifyCheckbox"
        android:text="@string/notify_me"
        android:textColor="@color/regular_text_color"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/notification_value"
            android:background="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:inputType="number"
            android:minEms="2"
            android:maxEms="2"
            android:layout_gravity="center_vertical"/>
        <Spinner
            android:id="@+id/notification_kind"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector"/>
        <TextView
            android:text="@string/before"
            android:textColor="@color/regular_text_color"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minEms="3"
            android:maxEms="3"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:text="@string/comment"
        android:textColor="@color/regular_text_color"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_gravity="fill_horizontal"
        android:textStyle="bold" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/update_appt_comment"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:maxLines="4"
            android:layout_gravity="fill_horizontal"
            android:gravity="top|left"/>
    </ScrollView>

    <Button
        android:text="@string/save"
        style="@style/TitleButton"
        android:ems="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:drawableRight="@drawable/save"
        android:onClick="saveAppointment"/>

</LinearLayout>
