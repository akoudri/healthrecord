<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/app_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- TODO: Should be centered horizontally -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/regular_text_color"
                android:textStyle="bold"
                android:layout_margin="7dp"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="0.5"
                android:text="@string/weight"
                android:ems="8"/>
            <EditText
                android:id="@+id/edit_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="0.5"
                android:layout_margin="7dp"
                android:inputType="numberDecimal"
                android:ems="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/regular_text_color"
                android:textStyle="bold"
                android:layout_margin="7dp"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="0.5"
                android:text="@string/size"
                android:ems="8"/>
            <EditText
                android:id="@+id/edit_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_margin="7dp"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="0.5"
                android:inputType="number"
                android:ems="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/regular_text_color"
                android:textStyle="bold"
                android:layout_margin="7dp"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="0.5"
                android:text="@string/cp"
                android:ems="8"/>
            <EditText
                android:id="@+id/edit_cranial_perimeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="7dp"
                android:inputType="number"
                android:layout_weight="0.5"
                android:ems="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/regular_text_color"
                android:textStyle="bold"
                android:layout_margin="7dp"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="0.5"
                android:text="@string/temperature"
                android:ems="8"/>
            <EditText
                android:id="@+id/edit_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="7dp"
                android:inputType="numberDecimal"
                android:layout_weight="0.5"
                android:ems="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/regular_text_color"
                android:textStyle="bold"
                android:layout_margin="7dp"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="0.5"
                android:text="@string/glucose"
                android:ems="8"/>
            <EditText
                android:id="@+id/edit_glucose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="7dp"
                android:inputType="numberDecimal"
                android:layout_weight="0.5"
                android:ems="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/regular_text_color"
                    android:textStyle="bold"
                    android:layout_margin="7dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_weight="0.5"
                    android:text="@string/diastolic"
                    android:ems="8"/>
                <EditText
                    android:id="@+id/edit_diastolic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:layout_gravity="fill_horizontal"
                    android:layout_margin="7dp"
                    android:inputType="number"
                    android:layout_weight="0.5"
                    android:ems="2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/regular_text_color"
                    android:textStyle="bold"
                    android:layout_margin="7dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_weight="0.5"
                    android:text="@string/systolic"
                    android:ems="8"/>
                <EditText
                    android:id="@+id/edit_systolic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:layout_gravity="fill_horizontal"
                    android:layout_margin="7dp"
                    android:inputType="number"
                    android:layout_weight="0.5"
                    android:ems="2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/regular_text_color"
                    android:textStyle="bold"
                    android:layout_margin="7dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_weight="0.5"
                    android:text="@string/heartbeat"
                    android:ems="8"/>
                <EditText
                    android:id="@+id/edit_heartbeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:layout_gravity="fill_horizontal"
                    android:layout_margin="7dp"
                    android:inputType="number"
                    android:layout_weight="0.5"
                    android:ems="2"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:text="@string/save"
            style="@style/TitleButton"
            android:minEms="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_gravity="center_horizontal"
            android:drawableRight="@drawable/save"
            android:onClick="saveMeasures"/>
    </LinearLayout>
</ScrollView>