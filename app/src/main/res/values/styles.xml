<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->

    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:editTextBackground">@android:color/white</item>
    </style>

    <style name="RegularButton">
        <!-- TODO: API does not allow to call styles programmatically -->
    </style>

    <style name="TitleButton">
        <item name="android:background">@drawable/healthrecord_button</item>
        <item name="android:textColor">@color/title_button_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.UserDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>